f = open('24.txt') 
countMax = 1
m = 0
for s in f:
   count = 1
   for i in range(len(s) - 1):
        if s[i] == s[i+1]:
            count += 1
            countMax = max(count, countMax)

        else:
            count = 1
f.close()
f = open('24.txt') 
for s in f:
       count = 1
       a = []
       for i in range(len(s) - 1):
              if s[i] == s[i + 1]:

                   count += 1 
                   if count == countMax:
                         a += [s[i]]

              else:
                    count = 1

        k = 0
        for j in a:
               k = max(k, s.count(j))
        m = max(k, m)
print(m) 