f = open('24.txt')
s = f.readline()
count = countmax = 1
for i in range(len(s) - 1):
    if s[i] == s[i + 1] == '0':
        count = 1
    else:
        count += 1
    countMax = max(count, countMax)
print(countMax)
close()
