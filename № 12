def prime_number(a):
    for i in range(2, a):
        if a % i == 0:
            return False
    return True


for n in range(100):

    s = '>' + 16 * '1' + n * '2' + 16 * '3'
    while '>1' in s or '>3' in s or '>2' in s:
        if '>1' in s:
            s = s.replace('>1', '1>', 1)
        if '>3' in s:
            s = s.replace('>3', '>2', 1)
        if '>2' in s:
            s = s.replace('>2', '>1', 1)

    b = []
    for j in s:
        if j != '>':
            b.append(int(j))
    summa = sum(b)

    if prime_number(summa):
        print(n)
        break
